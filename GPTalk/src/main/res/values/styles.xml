<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/backgroundSliderFragment</item>
        <item name="android:textColor">#ffebe4ff</item>
        <item name="android:textColorSecondary">#ff000000</item>
        <item name="android:divider">#ffe4e4e4</item>
        <item name="android:dividerHeight">3px</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabBarStyle">@drawable/actionbar_background</item>
    </style>

    <style name="AlternativeTheme">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorSecondary">#ff9c9c9c</item>
        <item name="android:windowBackground">@drawable/settings_background</item>
        <item name="android:divider">#ffbb8d0d</item>
        <item name="android:dividerHeight">3px</item>
        <item name="android:dropDownListViewStyle">@style/MyDropDownListView</item>
        <item name="android:spinnerDropDownItemStyle">@style/MySpinnerDropDownItem</item>
        <item name="android:spinnerStyle">@style/StandardSpinner</item>
        <item name="android:spinnerItemStyle">@style/MySpinnerDropDownItem</item>
        <item name="android:dropDownSpinnerStyle">@style/MySpinnerDropDownItem</item>
    </style>

    <style name="Theme.MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorSecondary">#ffebe4ff</item>
        <item name="android:textColor">#ffebe4ff</item>
    </style>

    <style name="MyDropDownListView" parent="android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/ad_selectable_background</item>
        <item name="android:textColor">#000000</item>
        <item name="android:dropDownSelector">#000000</item>
    </style>

    <style name="MySpinnerDropDownItem" parent="android:style/Widget.DropDownItem.Spinner">
        <item name="android:background">@drawable/ad_selectable_background</item>
        <item name="android:checkMark">@null</item>
        <item name="android:textColor">#000000</item>
        <item name="android:dropDownSelector">#000000</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="StandardSpinner" parent="@android:style/Widget.Spinner">
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#000000</item>
        <item name="android:dropDownSelector">#000000</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">

    </style>

    <style name="MyActionBar" parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background</item>
    </style>

    <color name="titleColor">#ff555555</color>
    <color name="normalTextColor">#000000</color>
    <color name="textviewClickColor">#ff843d80</color>
    <color name="listviewHightlight">#ffed9b00</color>
    <color name="consultationCategory">#ff2c72b2</color>
    <color name="textColorHightlight">#ff378edc</color>
    <color name="backgroundSliderFragment">#ff191919</color>
    <color name="loginButton">#ffdb81ff</color>
    <color name="sliderTextColor">#ffffff</color>
    <color name="dividerColor">#ff3a3a3a</color>
    <color name="aboutColor">#ffbb8d0d</color>
    <color name="webColor">#ff21608f</color>
    <color name="secondaryListColor">#ff575757</color>

</resources>
