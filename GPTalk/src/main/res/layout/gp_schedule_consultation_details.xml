<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gpScheduleListConsultationDetails"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_background"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consultation Details"
                android:textSize="30dp"
                android:textStyle="normal"
                android:textColor="@color/titleColor"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/tvPatientConsultationTitle" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/table_layout"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="22dp"
                            android:padding="5dp"
                            android:textStyle="normal"
                            android:textColor="@color/normalTextColor"
                            android:id="@+id/tvPatientConsultationFirstName" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="22dp"
                            android:textStyle="normal"
                            android:layout_toRightOf="@id/tvPatientConsultationFirstName"
                            android:textColor="@color/normalTextColor"
                            android:padding="5dp"
                            android:id="@+id/tvPatientConsultationLastName" />

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:padding="5dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/ivRequestPatientConsultationProfile" />

                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:id="@+id/table_layout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="120dp"
                    android:background="@drawable/custom_consultation_background"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent">

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Main Symptom:"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvPatientConsultationSymptomTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            android:padding="5dp"
                            android:textColor="@color/normalTextColor"
                            android:id="@+id/tvPatientConsultationSymptom" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow5"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Other Symptoms:"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvPatientConsultationOtherSymptomsTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            android:textColor="@color/normalTextColor"
                            android:padding="5dp"
                            android:id="@+id/tvPatientConsultationOtherSymptoms" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow6"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Main\nAllergy:"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvPatientConsultationAllergyTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            android:textColor="@color/normalTextColor"
                            android:padding="5dp"
                            android:id="@+id/tvPatientConsultationAllergy" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow7"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Other\nAllergies"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvPatientConsultationOtherAllergiesTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            android:textColor="@color/normalTextColor"
                            android:padding="5dp"
                            android:id="@+id/tvPatientConsultationOtherAllergies" />

                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:id="@+id/table_layout2"
                    android:layout_below="@id/table_layout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_change_details_background"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent">

                    <TableRow
                        android:id="@+id/tableRow8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Booking\nDate:"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvPatientConsultationBookingDateTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="italic"
                            android:textColor="@color/textviewClickColor"
                            android:padding="5dp"
                            android:id="@+id/tvPatientConsultationBookingDate" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow9"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Booking\nTime:"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvPatientConsultationBookingTimeTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="italic"
                            android:textColor="@color/textviewClickColor"
                            android:padding="5dp"
                            android:id="@+id/tvPatientConsultationBookingTime" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow10"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Status"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvPatientConsultationStatusTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="italic"
                            android:textColor="@color/textviewClickColor"
                            android:padding="5dp"
                            android:id="@+id/tvPatientConsultationStatus" />

                    </TableRow>

                </TableLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="40dp"
                    android:layout_marginLeft="130dp"
                    android:id="@+id/bScheduleCancelConsultation"
                    android:text="Cancel Consultation"
                    android:background="@drawable/reject_button_style" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>