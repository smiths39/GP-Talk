<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical" >

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Profile"
                android:textSize="30dp"
                android:textStyle="normal"
                android:textColor="@color/titleColor"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/tvGPAccountTitle" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/table_layout"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Profile"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:id="@+id/tvGPProfileTitle" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/ivGPProfilePhoto" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Username"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:id="@+id/tvGPUsernameTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:textColor="@color/normalTextColor"
                            android:id="@+id/tvGPUsername" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Title"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/tvGPTitleNameTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            android:background="@drawable/cell_shape"
                            android:textColor="@color/normalTextColor"
                            android:padding="5dp"
                            android:id="@+id/tvGPNameTitle" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="First Name"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:id="@+id/tvGPFirstNameTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:textStyle="normal"
                            android:textColor="@color/normalTextColor"
                            android:id="@+id/tvGPFirstName" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Last Name"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/tvGPLastNameTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            android:textColor="@color/normalTextColor"
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/tvGPLastName" />

                    </TableRow>

                <TableRow
                    android:id="@+id/tableRow6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Email"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/normalTextColor"
                        android:gravity="left"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:id="@+id/tvGPEmailTitle" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:textSize="18dp"
                        android:textStyle="normal"
                        android:textColor="@color/normalTextColor"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:id="@+id/tvGPEmail" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="Medical Centre Address"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/normalTextColor"
                        android:gravity="left"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:id="@+id/tvGPMedicalCentreAddressTitle" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:textSize="18dp"
                        android:textStyle="normal"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:textColor="@color/normalTextColor"
                        android:id="@+id/tvGPMedicalCentreAddress" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="Medical Centre City"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/normalTextColor"
                        android:gravity="left"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:id="@+id/tvGPMedicalCentreCityTitle" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:textSize="18dp"
                        android:textStyle="normal"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:textColor="@color/normalTextColor"
                        android:id="@+id/tvGPMedicalCentreCity" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="Medical Centre County"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/normalTextColor"
                        android:gravity="left"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:id="@+id/tvGPMedicalCentreCountyTitle" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:textSize="18dp"
                        android:textStyle="normal"
                        android:textColor="@color/normalTextColor"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:id="@+id/tvGPMedicalCentreCounty" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="Medical Centre Post Code"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/normalTextColor"
                        android:gravity="left"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:id="@+id/tvGPMedicalCentrePostCodeTitle" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:textSize="18dp"
                        android:textStyle="normal"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:textColor="@color/normalTextColor"
                        android:id="@+id/tvGPMedicalCentrePostCode" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="Medical Centre Phone Number"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/normalTextColor"
                        android:gravity="left"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:id="@+id/tvGPMedicalCentrePhoneNumberTitle" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:textSize="18dp"
                        android:textStyle="normal"
                        android:textColor="@color/normalTextColor"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:id="@+id/tvGPMedicalCentrePhoneNumber" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="Medical Centre Website"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/normalTextColor"
                        android:gravity="left"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:id="@+id/tvGPMedicalCentreWebsiteTitle" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:textSize="18dp"
                        android:textStyle="normal"
                        android:textColor="@color/normalTextColor"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:id="@+id/tvGPMedicalCentreWebsite" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Consultation Cost"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/tvGPConsultationCostTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            android:textColor="@color/normalTextColor"
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/tvGPConsultationCost" />

                    </TableRow>

                </TableLayout>

            </RelativeLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Settings"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="40dp"
                android:id="@+id/bGPProfileSettings"
                android:background="@drawable/account_button_style"
                android:layout_gravity="center_vertical|center_horizontal" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>