<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical" >

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/login_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tvRegistrationTitle"
            android:layout_width="285dp"
            android:layout_height="60dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:text="GPTalk Registration"
            android:textSize="32dp"
            android:textColor="#ffffb058"/>

        <EditText
            android:id="@+id/etRegistrationUsername"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textColor="@color/normalTextColor"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_top_registration_edittext"
            android:ems="10"
            android:hint="Username"
            android:paddingLeft="10dp"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/etRegistrationEmail"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/center_registration_edittext"
            android:textColor="@color/normalTextColor"
            android:ems="10"
            android:hint="Email"
            android:paddingLeft="10dp"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/etRegistrationPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/center_registration_edittext"
            android:ems="10"
            android:textColor="@color/normalTextColor"
            android:hint="Password"
            android:paddingLeft="10dp"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:singleLine="true" />

        <Spinner
            android:id="@+id/sRegistrationTitle"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/center_registration_edittext"
            android:entries="@array/registration_title"
            android:prompt="@string/registration_title_prompt"
            android:paddingLeft="5dp"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/etRegistrationFirstName"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/center_registration_edittext"
            android:ems="10"
            android:textColor="@color/normalTextColor"
            android:hint="First Name"
            android:paddingLeft="10dp"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/etRegistrationLastName"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_bottom_registration_edittext"
            android:ems="10"
            android:textColor="@color/normalTextColor"
            android:hint="Last Name"
            android:paddingLeft="10dp"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/etRegistrationMedicalCentreAddress"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_top_registration_edittext"
            android:ems="10"
            android:textColor="@color/normalTextColor"
            android:hint="Medical Centre Address"
            android:paddingLeft="10dp"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/etRegistrationMedicalCentreCity"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/center_registration_edittext"
            android:ems="10"
            android:textColor="@color/normalTextColor"
            android:hint="Medical Centre City"
            android:paddingLeft="10dp"
            android:imeOptions="actionDone"
            android:singleLine="true" />

        <Spinner
            android:id="@+id/sRegistrationMedicalCentreCounty"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/center_registration_edittext"
            android:entries="@array/gp_county_list"
            android:prompt="@string/registration_county_prompt"
            android:paddingLeft="5dp"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/etRegistrationMedicalCentrePostCode"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/center_registration_edittext"
            android:ems="10"
            android:textColor="@color/normalTextColor"
            android:hint="Medical Centre Post Code"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:imeOptions="actionNext"
            android:singleLine="true" />

        <EditText
            android:id="@+id/etRegistrationMedicalCentrePhoneNumber"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/center_registration_edittext"
            android:ems="10"
            android:textColor="@color/normalTextColor"
            android:hint="Medical Centre Phone Number"
            android:paddingLeft="10dp"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:inputType="number" />

        <EditText
            android:id="@+id/etRegistrationMedicalCentreWebsite"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/center_registration_edittext"
            android:ems="10"
            android:textColor="@color/normalTextColor"
            android:hint="Medical Centre Website"
            android:paddingLeft="10dp"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/etRegistrationMedicalCentreConsultationCosts"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_bottom_registration_edittext"
            android:ems="10"
            android:textColor="@color/normalTextColor"
            android:hint="Consultation Costs"
            android:paddingLeft="10dp"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:singleLine="true" />

        <Button
            android:id="@+id/bRegister"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:text="Register" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30px">

            <TextView
                android:id="@+id/tvSignInHere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="60dp"
                android:layout_alignParentRight="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="Sign In Here"
                android:textStyle="bold"
                android:textSize="18dp"
                android:onClick="onClick"
                android:clickable="true"
                android:textColor="@color/link_text_color" />

            <TextView
                android:id="@+id/tvSignInText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/tvSignInHere"
                android:singleLine="true"
                android:text="Already on GPTalk?"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/loginButton" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>