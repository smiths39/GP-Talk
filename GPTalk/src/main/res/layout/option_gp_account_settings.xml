<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Settings"
                android:textSize="30dp"
                android:textStyle="normal"
                android:textColor="@color/titleColor"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/tvNewAccountTitleGP" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/table_layout"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Username"
                            android:textSize="19dp"
                            android:textStyle="bold"
                            android:paddingLeft="5dp"
                            android:background="@drawable/cell_shape"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="20dp"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:id="@+id/tvNewGPUsernameTitle" />

                        <EditText
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="19dp"
                            android:textStyle="normal"
                            android:textColor="#000000"
                            android:background="@drawable/option_settings_cell_shape"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="20dp"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:id="@+id/etNewUsernameGP" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Title"
                            android:textSize="19dp"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:background="@drawable/cell_shape"
                            android:paddingBottom="5dp"
                            android:paddingRight="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:id="@+id/tvNewGPNameTitle" />

                        <Spinner
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:entries="@array/registration_title"
                            android:prompt="@string/registration_title_prompt"
                            android:spinnerMode="dropdown"
                            android:background="@drawable/option_settings_cell_shape"
                            android:id="@+id/etNewGPTitleGP" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="First Name"
                            android:textSize="19dp"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:background="@drawable/cell_shape"
                            android:paddingBottom="5dp"
                            android:paddingRight="20dp"
                            android:textStyle="bold"
                             android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:id="@+id/tvNewGPFirstNameTitle" />

                        <EditText
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:textSize="19dp"
                            android:textStyle="normal"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:background="@drawable/option_settings_cell_shape"                        android:paddingBottom="5dp"
                            android:paddingRight="20dp"
                            android:textColor="#000000"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:id="@+id/etNewFirstNameGP" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Name"
                            android:textSize="19dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:background="@drawable/cell_shape"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="20dp"
                            android:id="@+id/tvNewGPLastNameTitle" />

                        <EditText
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:textSize="19dp"
                            android:textColor="#000000"
                            android:singleLine="true"
                            android:textStyle="normal"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="20dp"
                            android:imeOptions="actionNext"
                            android:background="@drawable/option_settings_cell_shape"
                            android:id="@+id/etNewLastNameGP" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="19dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:background="@drawable/cell_shape"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="20dp"
                            android:id="@+id/tvNewGPEmailTitle" />

                        <EditText
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/option_settings_cell_shape"
                            android:textSize="19dp"
                            android:textStyle="normal"
                            android:textColor="#000000"
                            android:singleLine="true"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="20dp"
                            android:imeOptions="actionNext"
                            android:id="@+id/etNewEmailGP" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medical Address"
                            android:textSize="19dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/cell_shape"
                            android:paddingRight="5dp"
                            android:id="@+id/tvNewGPMedicalCentreAddressTitle" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="19dp"
                            android:textStyle="normal"
                            android:textColor="#000000"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="5dp"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:background="@drawable/option_settings_cell_shape"
                            android:id="@+id/etNewMedicalCentreAddressGP" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medical City"
                            android:textSize="19dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="5dp"
                            android:background="@drawable/cell_shape"
                            android:id="@+id/tvNewGPMedicalCentreCityTitle" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="19dp"
                            android:textStyle="normal"
                            android:textColor="#000000"
                            android:singleLine="true"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="5dp"
                            android:imeOptions="actionNext"
                            android:background="@drawable/option_settings_cell_shape"
                            android:id="@+id/etNewMedicalCentreCityGP" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medical County"
                            android:textSize="19dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:background="@drawable/cell_shape"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="5dp"
                            android:id="@+id/tvNewGPMedicalCentreCountyTitle" />

                        <Spinner
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:textSize="19dp"
                            android:textStyle="normal"
                            android:entries="@array/registration_county"
                            android:prompt="@string/registration_county_prompt"
                            android:spinnerMode="dropdown"
                            android:textColor="#000000"
                            android:background="@drawable/option_settings_cell_shape"
                            android:imeOptions="actionNext"
                            android:id="@+id/etNewMedicalCentreCountyGP" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medical Post Code"
                            android:textSize="19dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="5dp"
                            android:background="@drawable/cell_shape"
                            android:id="@+id/tvNewGPMedicalCentrePostCodeTitle" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="19dp"
                            android:textStyle="normal"
                            android:textColor="#000000"
                            android:singleLine="true"
                            android:inputType="number"
                            android:imeOptions="actionNext"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="5dp"
                            android:background="@drawable/option_settings_cell_shape"
                            android:id="@+id/etNewMedicalCentrePostCodeGP" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medical Phone"
                            android:textSize="19dp"
                            android:textStyle="bold"
                             android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:background="@drawable/cell_shape"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="20dp"
                            android:id="@+id/tvNewGPMedicalCentrePhoneNumberTitle" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="19dp"
                            android:textStyle="normal"
                            android:textColor="#000000"
                            android:singleLine="true"
                            android:inputType="number"
                            android:imeOptions="actionNext"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="5dp"
                            android:background="@drawable/option_settings_cell_shape"
                            android:id="@+id/etNewMedicalCentrePhoneNumberGP" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow11"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medical Website"
                            android:textSize="19dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="20dp"
                            android:background="@drawable/cell_shape"
                            android:id="@+id/tvNewGPMedicalCentreWebsiteTitle" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="19dp"
                            android:textStyle="normal"
                            android:textColor="#000000"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="20dp"
                            android:background="@drawable/option_settings_cell_shape"
                            android:id="@+id/etNewMedicalCentreWebsiteGP" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow12"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cost"
                            android:textSize="19dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="5dp"
                            android:background="@drawable/cell_shape"
                            android:id="@+id/tvNewGPMedicalCentreConsultationCostsTitle" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="19dp"
                            android:textStyle="normal"
                            android:textColor="#000000"
                            android:singleLine="true"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="5dp"
                            android:background="@drawable/option_settings_cell_shape"
                            android:id="@+id/etNewMedicalCentreConsultationCostsGP" />

                    </TableRow>

                </TableLayout>

            </RelativeLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Settings"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/bSaveGPProfileSettings"
                android:background="@drawable/confirm_button_style"
                android:layout_gravity="center_vertical|center_horizontal" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>