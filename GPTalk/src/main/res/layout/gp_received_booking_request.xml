<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gpScheduleListConsultationDetails"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_background"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Booking Request"
                android:textSize="30dp"
                android:textStyle="normal"
                android:textColor="@color/titleColor"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/tvNewBookingRequestTitle" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/table_layout_top"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            android:textColor="@color/normalTextColor"
                            android:id="@+id/tvRequestPatientCompleteName" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            android:textColor="@color/normalTextColor"
                            android:id="@+id/tvRequestPatientDOB" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            android:textColor="@color/normalTextColor"
                            android:id="@+id/tvRequestPatientGender" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            android:textColor="@color/normalTextColor"
                            android:id="@+id/tvRequestPatientNationality" />

                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:id="@+id/table_layout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/table_layout_top"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:padding="1dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="70dp"
                        android:id="@+id/ivRequestPatientProfilePhoto" />

                </TableLayout>

                <TableLayout
                    android:id="@+id/table_layout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="150dp"
                    android:background="@drawable/custom_consultation_background"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent">

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Main Symptom:"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvRequestPatientSymptomTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            android:padding="5dp"
                            android:textColor="@color/normalTextColor"
                            android:id="@+id/tvRequestPatientSymptom" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow5"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Other Symptoms:"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvRequestPatientOtherSymptomsTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            android:textColor="@color/normalTextColor"
                            android:padding="5dp"
                            android:id="@+id/tvRequestPatientOtherSymptoms" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow6"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Main\nAllergy:"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvRequestPatientAllergyTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            android:textColor="@color/normalTextColor"
                            android:padding="5dp"
                            android:id="@+id/tvRequestPatientAllergy" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow7"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Other\nAllergies:"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvRequestPatientOtherAllergiesTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            android:textColor="@color/normalTextColor"
                            android:padding="5dp"
                            android:id="@+id/tvRequestPatientOtherAllergies" />

                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:id="@+id/table_layout2"
                    android:layout_below="@id/table_layout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_change_details_background"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent">

                    <TableRow
                        android:id="@+id/tableRow8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Booking\nDate:"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvRequestPatientBookingDateTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="italic"
                            android:textColor="@color/textviewClickColor"
                            android:padding="5dp"
                            android:id="@+id/tvRequestPatientBookingDate" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow9"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Booking\nTime:"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvRequestPatientBookingTimeTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="italic"
                            android:textColor="@color/textviewClickColor"
                            android:padding="5dp"
                            android:id="@+id/tvRequestPatientBookingTime" />

                    </TableRow>

                </TableLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingLeft="4.0dip"
                    android:paddingTop="5.0dip"
                    android:paddingRight="4.0dip"
                    android:paddingBottom="1.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TextView01">

                    <Button
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="40dp"
                        android:id="@+id/bConfirmRequest"
                        android:text="Confirm"
                        android:background="@drawable/confirm_button_style"
                        />

                    <Button
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="40dp"
                        android:id="@+id/bRejectRequest"
                        android:text="Reject"
                        android:layout_toRightOf="@id/bConfirmRequest"
                        android:background="@drawable/reject_button_style"
                        android:layout_marginLeft="20dp"/>/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>