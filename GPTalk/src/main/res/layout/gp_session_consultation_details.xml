<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gpSessionListConsultationDetailsPage"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_background"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consultation Details"
                android:textSize="30dp"
                android:textStyle="normal"
                android:textColor="@color/titleColor"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/tvGPSessionPageTitle" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/table_layout"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="22dp"
                            android:padding="5dp"
                            android:textStyle="normal"
                            android:textColor="@color/normalTextColor"
                            android:id="@+id/tvGPSessionName" />

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:padding="5dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/ivRequestGPSessionProfile" />

                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:id="@+id/table_layout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="120dp"
                    android:background="@drawable/custom_consultation_background"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent">

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Address:"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvGPSessionAddressTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            android:padding="5dp"
                            android:textColor="@color/normalTextColor"
                            android:id="@+id/tvGPSessionAddress" />

                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:id="@+id/table_layout2"
                    android:layout_below="@id/table_layout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_change_details_background"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent">

                    <TableRow
                        android:id="@+id/tableRow8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Booking\nDate:"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvGPSessionBookingDateTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="italic"
                            android:textColor="@color/textviewClickColor"
                            android:padding="5dp"
                            android:id="@+id/tvGPSessionBookingDate" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow9"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Booking\nTime:"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvGPSessionBookingTimeTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="italic"
                            android:textColor="@color/textviewClickColor"
                            android:padding="5dp"
                            android:id="@+id/tvGPSessionBookingTime" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow10"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Status"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvGPSessionStatusTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="italic"
                            android:textColor="@color/textviewClickColor"
                            android:padding="5dp"
                            android:id="@+id/tvGPSessionStatus" />

                    </TableRow>

                </TableLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingLeft="4.0dip"
                    android:paddingTop="5.0dip"
                    android:paddingRight="4.0dip"
                    android:paddingBottom="1.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TextView01">

                    <Button
                        android:layout_marginTop="50dp"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="40dp"
                        android:id="@+id/bSessionDirectionMap"
                        android:text="Get Directions"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:textColor="#000000"
                        android:background="@drawable/status_unconfirmed"/>

                    <Button
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="40dp"
                        android:textColor="#000000"
                        android:layout_centerInParent="true"
                        android:id="@+id/bSessionCancelConsultation"
                        android:text="Cancel Consultation"
                        android:layout_toRightOf="@id/bSessionDirectionMap"
                        android:background="@drawable/reject_button_style"
                        android:layout_marginLeft="20dp"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>