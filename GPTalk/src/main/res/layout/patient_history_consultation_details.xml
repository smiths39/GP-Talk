<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gpScheduleListConsultationDetails"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_background"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consultation Details"
                android:textSize="30dp"
                android:textStyle="normal"
                android:textColor="@color/normalTextColor"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/tvPatientHistoryConsultationDetailsTitle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="normal"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/tvPatientHistoryConsultationDetailsStatus" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/table_layout_top"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="22dp"
                            android:padding="5dp"
                            android:textStyle="normal"
                            android:textColor="@color/normalTextColor"
                            android:id="@+id/tvPatientHistoryConsultationDetailsName" />

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:padding="5dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/ivRequestPatientHistoryConsultationDetailsProfile" />

                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:id="@+id/table_layout_symptoms"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_consultation_background"
                    android:layout_below="@id/table_layout_top"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent">

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Main Symptoms:"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvPatientHistoryConsultationDetailsMainSymptomTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            android:textColor="@color/normalTextColor"
                            android:padding="5dp"
                            android:id="@+id/tvPatientHistoryConsultationDetailsMainSymptom" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow5"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Other Symptoms:"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvPatientHistoryConsultationDetailsOtherSymptomsTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            android:textColor="@color/normalTextColor"
                            android:padding="5dp"
                            android:id="@+id/tvPatientHistoryConsultationDetailsOtherSymptoms" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow6"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Main\nAllergy:"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvPatientHistoryConsultationDetailsAllergyTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            android:textColor="@color/normalTextColor"
                            android:padding="5dp"
                            android:id="@+id/tvPatientHistoryConsultationDetailsAllergy" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow7"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Other\nAllergies:"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvPatientHistoryConsultationDetailsOtherAllergiesTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            android:textColor="@color/normalTextColor"
                            android:padding="5dp"
                            android:id="@+id/tvPatientHistoryConsultationDetailsOtherAllergies" />

                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:id="@+id/table_layout_booking"
                    android:layout_below="@id/table_layout_symptoms"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_change_details_background"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent">

                    <TableRow
                        android:id="@+id/tableRow8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Booking\nDate:"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvPatientHistoryConsultationDetailsBookingDateTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="italic"
                            android:textColor="@color/normalTextColor"
                            android:padding="5dp"
                            android:id="@+id/tvPatientHistoryConsultationDetailsBookingDate" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow9"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Booking\nTime:"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvPatientHistoryConsultationDetailsBookingTimeTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="italic"
                            android:textColor="@color/normalTextColor"
                            android:padding="5dp"
                            android:id="@+id/tvPatientHistoryConsultationDetailsBookingTime" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow10"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Explanation:"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/normalTextColor"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvPatientHistoryConsultationDetailsExplanationTitle" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textStyle="italic"
                            android:textColor="@color/normalTextColor"
                            android:padding="5dp"
                            android:id="@+id/tvPatientHistoryConsultationDetailsExplanation" />

                    </TableRow>

                </TableLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>